<h2>Admin Menu</h2>
<div class="identity">Logged in as: <%= @current_user.username %></div>
<ul>
  <li><%= link_to("Manage Admin Users", '#') %></li>

  <div id="chat" class="well" data-uri="<%= request.host %>:<%= request.port %>/websocket">
  </div>

  <div class="form-inline ">
    <fieldset>
      <input type="text" class="input-medium" id="user_name">
      <input type="text" class="input-xlarge" id="message">
      <button id="send" class="btn btn-primary">Send</button>
    </fieldset>
  </div>

  
  <li><%= link_to("Chat", :action => 'logout') %></li>
  <li><%= link_to("Logout", :action => 'logout') %></li>
</ul>
